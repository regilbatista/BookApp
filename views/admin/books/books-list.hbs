

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Libros</h1>
        <p class="lead text-muted">Una app hecha por y para tus libros</p>
        <p>
          <a href="/admin/add-books" class="btn btn-primary my-2">Añadir un libro</a>         
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div  id="book-container" class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#if hasbooks}}
          {{#each books as |book|}}
            <div class="col-md-4">
              <div class="card mb-3" style="max-width: 540px; height: 180px;">
                <div class="row g-0 h-100">
                  <div class="col-md-4 px-0 h-100">
                    <img src="{{book.imagePath}}" class="img-fluid rounded-start h-100" alt="{{book.name}}">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">{{book.name}}</h5>
                      <p class="card-text">
                        <small class="text-muted">
                          <b>Año de publicación: </b>{{book.datep}} <br>
                          <b>Categoría: </b>{{book.category.dataValues.name}}
                        </small>
                      </p>
                      <a href="/admin/edit-books/{{book.id}}?edit=true" type="button" class="btn btn-sm float-end btn-outline-warning me-3">Editar</a>
                      <form method="POST" id="form-delete-book" action="/admin/drop-books" class="form-inline">
                        <input type="hidden" name="bookId" value="{{book.id}}" />
                        <button type="submit" class="btn btn-sm float-end btn-outline-danger me-3 delete-book">Eliminar</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        {{else}}
          <h1>No hay libros creados</h1>
        {{/if}}
      </div>
      </div>
    </div>
  
