

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Categorias</h1>
        <p class="lead text-muted">Una app hecha por y para tus libros</p>
        <p>
          <a href="/admin/add-categorys" class="btn btn-primary my-2">AÃ±adir una categoria</a>         
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div  id="category-container" class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
       {{#if hascategorys}}
        {{#each categorys as |category|}}
        <div class="col">
          <div class="card shadow-sm" style="height: 300px;">
            <div class="card-body">
              <h5 class="card-title">{{category.name}}</h5>
                 <p class="card-text"><small class="text-muted"><b>descripcion: </b>{{category.description}}<br> <b>cant de libros: </b>{{category.books.length}}</small></p>

                <a href="/admin/edit-categorys/{{category.id}}?edit=true" type="button" class="btn btn-sm float-end btn-outline-warning me-3">Editar</a>

                 <form method="POST" id="form-delete-category" action="/admin/drop-categorys" class="form-inline">
                  <input type="hidden" name="categoryId" value= "{{category.id}}" />
                  <button type="submit"  class="btn btn-sm float-end btn-outline-danger me-3 delete-category">Eliminar</button> 
                </form>     
               </div>      
            </div>
          </div>
        {{/each}}
        {{else}}
        <h1>No hay categorias creadas</h1>
        {{/if}}
        </div>
      </div>
    </div>
  
