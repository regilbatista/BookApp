

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Autores</h1>
        <p class="lead text-muted">Una app hecha por y para tus libros</p>
        <p>
          <a href="/admin/add-writers" class="btn btn-primary my-2">AÃ±adir un autor</a>         
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div  id="writer-container" class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
       {{#if haswriters}}
        {{#each writers as |writer|}}
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">{{writer.name}}</h5>
              <p class="card-text"><small class="text-muted"> <b>Correo: </b>{{writer.email}} <br> <b>cant de libros publicados: </b>{{writer.books.length}}</small></p>
                          
                <a href="/admin/edit-writers/{{writer.id}}?edit=true" type="button" class="btn btn-sm float-end btn-outline-warning me-3">Editar</a>

                 <form method="POST" id="form-delete-writer" action="/admin/drop-writers" class="form-inline">
                  <input type="hidden" name="writeId" value= "{{writer.id}}" />
                  <button type="submit"  class="btn btn-sm float-end btn-outline-danger me-3 delete-writer">Eliminar</button> 
                </form>     
               </div>      
            </div>
          </div>
        {{/each}}
        {{else}}
        <h1>No hay autores creados</h1>
        {{/if}}
        </div>
      </div>
    </div>
  
