<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Préstamos</h1>
      <p class="lead text-muted">Una app hecha por y para tus libros</p>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div id="book-container" class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {{#if loans}}
        {{#each loans}}
          {{#if this.book}}
            <div class="col-md-4">
              <a href="/selected/{{this.book.id}}?select=true" class="card mb-3" style="max-width: 540px; height: 200px; text-decoration: none;">
                <div class="row g-0 h-100">
                  <div class="col-md-4 px-0 h-100">
                    <img src="{{this.book.imagePath}}" class="img-fluid rounded-start h-100" alt="{{this.book.name}}">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">{{this.book.name}}</h5>
                      <p class="card-text">
                        <small class="text-muted mt-2">
                          {{#if this.date_loan}}
                            <b>Tomado prestado: </b>{{this.date_loan}} <br>
                            {{#if this.date_devolution}}
                              <b>Devuelto: </b>{{this.date_devolution}} <br>
                            {{else}}
                              <b>No disponible "prestado"</b><br>
                              <b>Para devolver: </b>{{this.date_ToDev}} <br>
                            {{/if}}
                          {{else}}
                            <b>No disponible "prestado"</b><br>
                          {{/if}}
                          <b>Prestado a: </b>{{this.usuario.dataValues.usuario}} <br>
                        </small>
                      </p>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          {{else}}
            <p>No hay libros asociados a este préstamo.</p>
          {{/if}}
        {{/each}}
      {{else}}
        <h1>No has pedido un libro aún</h1>
      {{/if}}
    </div>
  </div>
</div>
