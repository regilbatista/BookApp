

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Usuarios</h1>
        <p class="lead text-muted">Una app hecha por y para tus libros</p>
        <p>
          <a href="/admin/add-users" class="btn btn-primary my-2">Añadir un usuario</a>         
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div  id="user-container" class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      {{#if hasUsers}}
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Usuario</th>
            <th scope="col">Correo</th>
            <th scope="col">Rol</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
        {{#each users as |user|}}
            <tr>
              <th scope="row">{{user.id}}</th>
              <td>{{user.name}} {{user.lastname}}</td>
              <td>{{user.usuario}}</td>
              <td>{{user.correo}}</td>
              {{#if user.admin}}
              <td>Admin</td>
              {{else}}
              <td>user</td>
              {{/if}}
              <td> 
                <a href="/admin/edit-users/{{user.id}}?edit=true" type="button" class="btn btn-sm  btn-outline-warning me-3">Editar</a>
                <form method="POST" id="form-delete-user" action="/admin/drop-users" class="form-inline">
                  <input type="hidden" name="userId" value= "{{user.id}}" />
                  <button type="submit"  class="btn btn-sm btn-outline-danger me-3 delete-user">Eliminar</button> 
                </form>   
              </td>
            </tr>
        {{/each}}
         </tbody>
        </table>
        {{else}}
        <h1>No hay libros creados</h1>
        {{/if}}
        </div>
      </div>
    </div>
  
