
    
    <div class="row py-5">
          <div class="col-md-6">
              <form method="POST" id="form-delete-book" action="/found" class="form-inline">
              <div class="row">
                  <div class="col-4">                
                  <input type="text" class="form-control" placeholder="Ejemplo: Harry Potter..." name="book" value= "{{#if editMode}}{{book.name}}{{/if}}" />
                  </div>
                  <div class="col-8">
                  <button type="submit" class="btn  btn-outline-secondary me-3 ">Buscar</button> 
                  </div>
              </div>  
            </form> 
          </div>
          <div class="col-md-6">
            <form method="POST" id="form-delete-book" action="/filter" class="form-inline">
            <div class="row">
                  <div class="col-4">
                      <select id="categorys" name="category" class="selectpicker" multiple required>
                            {{#each categorys as |category|}}
                              {{#if (equals category.id ../book.categoryId)}}
                                <option value="{{category.id}}" selected >{{category.name}}</option>
                              {{else}}
                                <option value="{{category.id}}">{{category.name}}</option>
                              {{/if}}
                            {{/each}}
                      </select>
                  </div>
                  &nbsp;&nbsp; &nbsp;&nbsp;
                  <div class="col-6">
                  <button type="submit" class="btn  btn-outline-warning me-3 ">Filtrar</button> 
                  </div>
              </div> 
            </form> 
          </div>
      </div>

  <div class="album py-5 bg-light">
    <div class="container">
     <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#if hasbooks}}
      {{#each books as |book|}}
       <div class="col">
         <a class="a" href="/selected/{{book.id}}?select=true" >
          <div class="card mb-3" style="max-width: 540px; height: 222px;">
            <div class="row g-0">
              <div class="col-md-4 px-0">
               <img src="{{book.imagePath}}" class="img-fluid rounded-start img-responsive" alt="{{book.name}}">
              </div>
               <div class="col-md-8">
                <div class="card-body">
                <h5 class="card-title">{{book.name}}</h5>
                <p class="card-text"><small class="text-muted"> <b>Año de publicacion: </b>{{book.datep}} <br> <b>Categoría: </b>{{book.category.dataValues.name}} 
                <br> <b>Autor: </b>{{book.writer.dataValues.name}} 
                <br> <b>Editorial: </b>{{book.editorial.dataValues.name}}</small></p>            
           </div>      
          </div>
         </div>
        </div>
       </a>
      </div>
          {{/each}}
         {{else}}
         {{#if filer}}<h1>No hay libros de esta categoria</h1>{{else}}<h1>No hay libros creados</h1>{{/if}}
       {{/if}}
     </div>
   </div>
 </div>